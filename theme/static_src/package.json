{
  "name": "theme",
  "version": "3.0.0",
  "description": "Tailwind CSS theme for Django",
  "scripts": {
    "start": "npm run dev",
    "build": "tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css --minify",
    "dev": "tailwindcss --postcss -i ./src/styles.css -o ../static/css/dist/styles.css -w"
  },
  "keywords": [
    "django",
    "tailwind",
    "theme"
  ],
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.4",
    "tailwindcss": "^3.4.17"
  }
}
